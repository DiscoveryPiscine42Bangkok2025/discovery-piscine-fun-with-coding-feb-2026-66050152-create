body {
    background-color: #f0f2f5;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    font-family: 'Arial', sans-serif;
}

/* ตกแต่งตัวการ์ด */
.card {
    background-color: white;
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    text-align: center;
    width: 300px;
}

/* ทำให้ตารางมองไม่เห็น (Invisible Table) */
.profile-table {
    width: 100%;
    border-collapse: collapse;
    border: none; /* ลบเส้นขอบ */ 
}

.profile-table td {
    border: none;
    padding: 10px;
}

/* ตกแต่งรูปโปรไฟล์ */
.profile-img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #00429d;
}

.login {
    font-weight: bold;
    font-size: 1.2em;
    margin-top: 10px;
}

.description {
    color: #666;
    font-style: italic;
    margin: 5px 0;
}

/* ไอคอนโซเชียล */
.social-links img {
    width: 25px;
    margin: 10px 5px;
    cursor: pointer;
}

/* ปุ่ม Contact */
.contact-btn {
    background-color: #00429d;
    color: white;
    border: none;
    padding: 10px 25px;
    border-radius: 20px;
    cursor: pointer;
    font-size: 16px;
    transition: 0.3s;
}

.contact-btn:hover {
    background-color: #002d6b;
}

